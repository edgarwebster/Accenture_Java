package accenture;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

import cucumber.api.java.After;
import cucumber.api.java.Before;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;

public class FillingForms {
	String url;
	WebDriver driver;
	
@Before
public void setup() {
	url = "http://sampleapp.tricentis.com/101/app.php";
	System.setProperty("webdriver.chrome.driver", "/Users/edgarwebster/Accenture/SampleApp/Drivers/chromedriver");
	driver = new ChromeDriver();
}
@After
public void teardown() {
	driver.quit();
}
		@Given("^Tricentis site is opened$")
		public void tricentis_site_is_opened() throws Throwable {
		  driver.get(url);  
		}

		@When("^user fill in Enter Vehicle Data Form$")
		public void user_fill_in_Enter_Vehicle_Data_Form() throws Throwable {
			new Select(driver.findElement(By.id("make"))).selectByVisibleText(EnvironmentVehicleData.make);
			//Thread.sleep(120000);
			new Select(driver.findElement(By.id("model"))).selectByVisibleText(EnvironmentVehicleData.model);
			driver.findElement(By.id("cylindercapacity")).sendKeys(Keys.chord(EnvironmentVehicleData.cylindercapacity));
			driver.findElement(By.id("engineperformance")).sendKeys(Keys.chord(EnvironmentVehicleData.engineperformance));
			driver.findElement(By.id("dateofmanufacture")).sendKeys(Keys.chord(EnvironmentVehicleData.dateofmanufacture));
			new Select(driver.findElement(By.id("numberofseats"))).selectByVisibleText(EnvironmentVehicleData.numberofseats);
			if (EnvironmentVehicleData.RightHandDrive=="yes") {
				driver.findElement(By.xpath("//*[@id=\"insurance-form\"]/div/section[1]/div[7]/p/label[1]/span")).click();	
			}
			else if(EnvironmentVehicleData.RightHandDrive=="no") {
				driver.findElement(By.xpath("//*[@id=\"insurance-form\"]/div/section[1]/div[7]/p/label[2]/span")).click();
				}
			new Select(driver.findElement(By.id("numberofseatsmotorcycle"))).selectByVisibleText(EnvironmentVehicleData.numberofseatsmotorcycle);
			driver.findElement(By.id("payload")).sendKeys(Keys.chord(EnvironmentVehicleData.payload));
			driver.findElement(By.id("totalweight")).sendKeys(Keys.chord(EnvironmentVehicleData.totalweight));
			driver.findElement(By.id("listprice")).sendKeys(Keys.chord(EnvironmentVehicleData.listprice));
			driver.findElement(By.id("licenseplatenumber")).sendKeys(Keys.chord(EnvironmentVehicleData.licenseplatenumber));
			driver.findElement(By.id("annualmileage")).sendKeys(Keys.chord(EnvironmentVehicleData.annualmileage));
			driver.findElement(By.id("nextenterinsurantdata")).click(); 
			hread.sleep(60000);
			
		}

		@When("^user fill in Enter Insurant Data Form$")
		public void user_fill_in_Enter_Insurant_Data_Form() throws Throwable {
	
		}

		@When("^user fill in Enter Product Data Form$")
		public void user_fill_in_Enter_Product_Data_Form() throws Throwable {

		}

		@When("^user select Price Option and Check$")
		public void user_select_Price_Option_and_Check() throws Throwable {
		}

		@When("^user fill information and Send Quote$")
		public void user_fill_information_and_Send_Quote() throws Throwable {

		}

		@Then("^a sending e-mail success message is shown$")
		public void a_sending_e_mail_success_message_is_shown() throws Throwable {

		}
}
